extends ./layouts/page

block vars
  - var pagetitle = 'LOGIN'
  
block style
  link(rel="stylesheet", href="style/login.css")
  
block content
  .wrapper.signin
    form.form-signin(action='/login', method='POST')
      h2.form-singin-heading Login with wachtmeister!
      hr.colorgraph
      input#csrfToken(type='hidden', name='csrfToken' value=csrfToken)
      input#username.form-control(name='username', type='text', placeholder='your username')
      input#password.form-control(name='password' type='password', placeholder='password')
      button#loginBtn.btn.btn-lg.btn-primary.btn-block(type='submit') Login

